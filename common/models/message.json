    },
    "tutor": {
      "type": "belongsTo",
      "model": "Tutor",
      "foreignKey": "tutorId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
